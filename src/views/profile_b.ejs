<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buyer Profile</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="header.css">
  <link rel="stylesheet" href="profile_b.css">
  <link rel="stylesheet" href="standardstyles.css">
  <link rel="stylesheet" href="modal.css">
</head>
<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="#">
      <div class="logo-container"></div>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" style="color: white" href="/dashboard_b">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" style="color: white" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<body id="profileBody">
  <!-- <div class="background-container"></div> -->
  <div id="profileContainer">
    <h2>Buyer Profile for <%= buyer.firstName %>
      <%= buyer.lastName %>
    </h2>
    <div class="form-row d-flex justify-content-center">
      <div class="form-group col-md-12 d-flex flex-column">
        <div class="form-row">
          <div class="userZip-container">
            <h3 class="text-center">Personal Info</h3>
            <div class="profile-group" style="border: none;">
              <%= buyer.firstName %>
              <%= buyer.lastName %>
              <br>
              <%= buyer.address %>
              <br>
              <%= buyer.city %>, <%= buyer.state %>
              <%= buyer.zip %>
              <br>
              <%= buyer.phoneNumber %>
              <br>
            </div>
            <div class="form-row button-row">
              <button id="modify-button" class="modify-button" type="button" data-toggle="modal" data-target="#personalModal" onclick="populateBuyerInfo()">
                Modify Personal Info
              </button>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="userZip-container" style="margin-top: 8px;">
            <h3>Your Zip Codes</h3>
            <div id="displayZipCodes" class="justify-content-center">
              <!-- JavaScript will populate this container -->
            </div>
            <div class="form-row button-row">
              <button type="button" id="modify-button" class="modify-button" data-toggle="modal" data-target="#zipCodeModal" onclick="populateUserZipCodes();">
                Modify Zip Codes
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group col-md-5">
        <div class="userZip-container">
          <h3 class="text-center">Search Details</h3>
          <div class="property-group">
            <div class="searchInfoDisplay" id="searchInfoDisplay">
              <!-- JavaScript will populate this container -->
            </div>
            <div class="form-row button-row">
              <button id="modify-button" class="modify-button" type="button" data-toggle="modal" data-target="#searchDetailModal" onclick="populateSearchDetails()">
                Modify Search Criteria
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('zipcode_modal') %>
  <%- include('personal_modal') %>
  <%- include('searchDetail_modal') %>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/profile_b.js"></script>
  <script src="/zipcode.js"></script>
  <script src="/session.js"></script>
</body>


</html>