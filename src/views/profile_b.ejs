<body>
    <div class="container mt-5">
        <div class="form-container">
            <h2 class="mb-4 text-center">Buyer Profile</h2>
            <form id="profileForm">
                <div class="form-group row justify-content-center">
                    <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="firstName" name="firstName"
                            value="<%= buyer.firstName %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="lastName" name="lastName"
                            value="<%= buyer.lastName %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="address" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="address" name="address"
                            value="<%= buyer.address %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="city" class="col-sm-2 col-form-label">City</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="city" name="city"
                            value="<%= buyer.city %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="state" class="col-sm-2 col-form-label">State</label>
                    <div class="col-sm-4">
                        <input class="form-control view-mode" id="state" name="state" value="<%= buyer.state %>"
                            required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="zip" class="col-sm-2 col-form-label">Zip</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="zip" name="zip" value="<%= buyer.zip %>"
                            required disabled onmouseleave="lookupCityState()" onblur="lookupCityState()">
                        <span id="cityState"></span>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="phoneNumber" class="col-sm-2 col-form-label">Phone Number</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="phoneNumber" name="phoneNumber"
                            value="<%= buyer.phoneNumber %>" required disabled>
                    </div>
                </div>
                <input type="hidden" id="userid" name="userid" value="<%= buyer.userid %>">
                <div class="text-center">
                    <button type="button" id="editButton" class="btn btn-primary">Edit</button>
                    <button type="button" id="saveButton" class="btn btn-success" style="display:none;">Save</button>
                    <button type="button" id="cancelButton" class="btn btn-secondary"
                        style="display:none;">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    <div class="container mt-5">
        <div class="form-container">
            <h2 class="mb-4 text-center">Property Profile</h2>
            <form id="propertyForm">
                <div class="form-group row justify-content-center">
                    <label for="propertyType" class="col-sm-2 col-form-label">Property Type</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="propertyType" name="propertyType"
                            value="<%= buyer.propertyType %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="bedrooms" class="col-sm-2 col-form-label">Bedrooms</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="bedrooms" name="Bedrooms"
                            value="<%= buyer.bedrooms %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="bathrooms" class="col-sm-2 col-form-label">Bathrooms</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="bathrooms" name="bathrooms"
                            value="<%= buyer.bathrooms %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="bathrooms" class="col-sm-2 col-form-label">Bathrooms</label>
                    <div class="col-sm-4">
                        <label for="customRange2" class="form-label">Example range</label>
                        <input type="range" class="form-range" min="0" max="5" id="customRange2">
                    </div>
                </div>
                <!-- <div class="form-group row justify-content-center">
                    <label for="squareFootage" class="col-sm-2 col-form-label">Square Footage</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="squareFootage" name="squareFootage"
                            value="<%= buyer.squareFootage %>" required disabled>
                    </div>
                </div> -->
                <div class="container mt-4">
                    <div class="row justify-content-center">
                        <div class="col-sm-2">
                            <label>Min/Max SQFT: </label>
                        </div>
                        <div slider id="slider-distance">
                            <div>
                              <div inverse-left style="width:70%;"></div>
                              <div inverse-right style="width:70%;"></div>
                              <div range style="left:30%;right:40%;"></div>
                              <span thumb style="left:30%;"></span>
                              <span thumb style="left:60%;"></span>
                              <div sign style="left:30%;">
                                <span id="value">30</span>
                              </div>
                              <div sign style="left:80%;">
                                <span id="value">80</span>
                              </div>
                            </div>
                            <input type="range" tabindex="0" value="30" max="100" min="0" step="5" oninput="
                            this.value=Math.min(this.value,this.parentNode.childNodes[5].value-1);
                            var value=(100/(parseInt(this.max)-parseInt(this.min)))*parseInt(this.value)-(100/(parseInt(this.max)-parseInt(this.min)))*parseInt(this.min);
                            var children = this.parentNode.childNodes[1].childNodes;
                            children[1].style.width=value+'%';
                            children[5].style.left=value+'%';
                            children[7].style.left=value+'%';children[11].style.left=value+'%';
                            children[11].childNodes[1].innerHTML=this.value;" />
                          
                            <input type="range" tabindex="0" value="60" max="100" min="0" step="5" oninput="
                            this.value=Math.max(this.value,this.parentNode.childNodes[3].value-(-1));
                            var value=(100/(parseInt(this.max)-parseInt(this.min)))*parseInt(this.value)-(100/(parseInt(this.max)-parseInt(this.min)))*parseInt(this.min);
                            var children = this.parentNode.childNodes[1].childNodes;
                            children[3].style.width=(100-value)+'%';
                            children[5].style.right=(100-value)+'%';
                            children[9].style.left=value+'%';children[13].style.left=value+'%';
                            children[13].childNodes[1].innerHTML=this.value;" />
                          </div>  
                        </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="priceRange" class="col-sm-2 col-form-label">Price Range</label>
                    <div class="col-sm-4">
                        <input class="form-control view-mode" id="priceRange" name="priceRange"
                            value="<%= buyer.priceRange %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="timeFrame" class="col-sm-2 col-form-label">Timeframe</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="timeFrame" name="timeFrame"
                            value="<%= buyer.timeFrame %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="prequalified" class="col-sm-2 col-form-label">Prequalified</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="prequalified" name="prequalified"
                            value="<%= buyer.prequalified %>" required disabled>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="preferredLanguages" class="col-sm-2 col-form-label">Preferred Languages</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control view-mode" id="preferredLanguages"
                            name="preferredLanguages" value="<%= buyer.preferredLanguages %>" required disabled>
                    </div>
                </div>
                <input type="hidden" id="userid" name="userid" value="<%= buyer.userid %>">
                <div class="text-center">
                    <button type="button" id="editButton2" class="btn btn-primary">Edit</button>
                    <button type="button" id="saveButton2" class="btn btn-success" style="display:none;">Save</button>
                    <button type="button" id="cancelButton2" class="btn btn-secondary"
                        style="display:none;">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/profile_b.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.6.0/nouislider.min.js"></script>
</body>

</html>