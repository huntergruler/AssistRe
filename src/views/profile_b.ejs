</head>


<header>
    <div class="row row-cols-2">
        <div id="title" class="align-items-center">
            <h1 class="mt-2"><a href="/">SeekingAgents</a></h1>
        </div>
        <nav id="navlinks" class="justify-content-end text-center">
            <p><a href="/dashboard_b">Dashboard</a></p>
            <p>|</p>
            <p><a href="/settings">Settings</a></p>
            <p>|</p>
            <p><a href="/logout">Logout</a></p>
        </nav>
    </div>

</header>

<body>
    <div class="margin-top-100"></div>
    <div class="row row-cols-2">
        <div class="col-md-4">
            <div class="container mt-5">
                <div class="form-container">
                    <h3 class="text-center">Personal Info</h3>
                    <form id="profileForm">
                        <div class="form-group row justify-content-center">
                            <div class="col-md-4"></div>
                            <label class="col-md-4" style="font-size: 12px;">First</label>
                            <label class="col-md-4" style="font-size: 12px;">Last</label>
                        </div>
                        <div class="form-group row justify-content-center">
                            <label for="firstName" class="col-md-4 col-form-label">Name</label>
                            <div class="col-md">
                                <input type="text" class="form-control view-mode" id="firstName" name="firstName"
                                    value="<%= buyer.firstName %>" required disabled>
                            </div>
                            <div class="col-md">
                                <input type="text" class="form-control view-mode" id="lastName" name="lastName"
                                    value="<%= buyer.lastName %>" required disabled>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <label for="address" class="col-md-4 col-form-label">Address</label>
                            <div class="col-md">
                                <input type="text" class="form-control view-mode" id="address" name="address"
                                    value="<%= buyer.address %>" required disabled>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <label for="city" class="col-md-4 col-form-label">City</label>
                            <div class="col-md">
                                <input type="text" class="form-control view-mode" id="city" name="city"
                                    value="<%= buyer.city %>" required disabled>
                            </div>
                            <div class="col-md-3"></div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <label for="state" class="col-md-4 col-form-label">State</label>
                            <div class="col-md">
                                <input class="form-control view-mode" id="state" name="state" value="<%= buyer.state %>"
                                    required disabled>
                            </div>
                            <div class="col-md"></div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <label for="zip" class="col-md-4 col-form-label">Zip</label>
                            <div class="col-md">
                                <input type="text" class="form-control view-mode" id="zip" name="zip"
                                    value="<%= buyer.zip %>" required disabled onmouseleave="lookupCityState()"
                                    onblur="lookupCityState()">
                                <span id="cityState"></span>
                            </div>
                            <div class="col-md"></div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <label for="phoneNumber" class="col-md-4 col-form-label">Phone Number</label>
                            <div class="col-md">
                                <input type="text" class="form-control view-mode" id="phoneNumber" name="phoneNumber"
                                    value="<%= buyer.phoneNumber %>" required disabled>
                            </div>
                            <div class="col-md"></div>
                        </div>
                        <input type="hidden" id="userid" name="userid" value="<%= buyer.userid %>">
                        <div class="text-center">
                            <button type="button" id="editButton" class="btn btn-primary btn-sm">Edit</button>
                            <button type="button" id="saveButton" class="btn btn-success btn-sm"
                                style="display:none;">Save</button>
                            <button type="button" id="cancelButton" class="btn btn-secondary btn-sm"
                                style="display:none;">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="container mt-5">
            <div class="form-container">
                <h3 class="text-center">Property Info</h3>
                <form id="propertyForm">
                    <div class="form-group row justify-content-center">
                        <label for="propertyType" class="col-md-4 col-form-label">Property Type</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control view-mode" id="propertyType" name="propertyType"
                                value="<%= buyer.propertyType %>" required disabled>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label for="bedrooms_min" class="col-md-4 col-form-label">Bedroom Range</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control view-mode style=" background-color: transparent;""
                                id="bedrooms_min" name="bedrooms_min" value="<%= buyer.bedrooms_min %>" required
                                disabled>
                        </div>
                        <div class="col-md-1">
                            <label for="to" class="form-control view-mode">to</label>
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control view-mode" id="bedrooms_max" name="bedrooms_max"
                                value="<%= buyer.bedrooms_max %>" required disabled>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label for="bathrooms" class="col-md-4 col-form-label">Bathroom Range</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control view-mode" id="bathrooms_min" name="bathrooms_min"
                                value="<%= buyer.bathrooms_min %>" required disabled>
                        </div>
                        <div class="col-md-1">
                            <label for="to" class="form-control view-mode">to</label>
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control view-mode" id="bathrooms_max" name="bathrooms_max"
                                value="<%= buyer.bathrooms_max %>" required disabled>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label for="squareFootage" class="col-md-4 col-form-label">Square Foot Range</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control view-mode" id="squareFootage_min"
                                name="squareFootage_min" value="<%= buyer.squareFootage_min %>" required disabled>
                        </div>
                        <div class="col-md-1">
                            <label for="to" class="form-control view-mode">to</label>
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control view-mode" id="squareFootage_max"
                                name="squareFootage_max" value="<%= buyer.squareFootage_max %>" required disabled>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label for="priceRange" class="col-md-4 col-form-label">Price Range</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control view-mode" id="price_min" name="price_min"
                                value="<%= buyer.price_min %>" required disabled>
                        </div>
                        <div class="col-md-1">
                            <label for="to" class="form-control view-mode">to</label>
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control view-mode" id="price_max" name="price_max"
                                value="<%= buyer.price_max %>" required disabled>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label for="timeFrame" class="col-md-4 col-form-label">Buying Timeframe</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control view-mode" id="timeFrame" name="timeFrame"
                                value="<%= buyer.timeFrame %>" required disabled>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label for="prequalified" class="col-md-4 col-form-label">Prequalified</label>
                        <div class="col-md-3">
                            <input type="radio" id="prequalifiedY" name="prequalified" required disabled>
                            Yes
                            <input type="radio" id="prequalifiedN" name="prequalified" required disabled>
                            No
                            <input type="hidden" id="prequalified" value="<%= buyer.prequalified %>">
                        </div>
                        <!-- <div class="form-group row justify-content-center" id="fileUploadDiv" style="display: none;">
                        <label for="dataFile" class="col-md-4 col-form-label">Upload Data File</label>
                        <div class="col-md-4">
                            <input type="file" class="form-control" id="dataFile" name="dataFile">
                        </div>
                    </div> -->
                        <div class="col-md-3"></div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label for="preferredLanguages" class="col-md-4 col-form-label">Preferred Language</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control view-mode" id="preferredLanguages"
                                name="preferredLanguages" value="<%= buyer.preferredLanguages %>" required disabled>
                        </div>
                    </div>
                    <input type="hidden" id="userid" name="userid" value="<%= buyer.userid %>">
                    <div class="text-center">
                        <button type="button" id="editButton2" class="btn btn-primary btn-sm">Edit</button>
                        <button type="button" id="saveButton2" class="btn btn-success btn-sm"
                            style="display:none;">Save</button>
                        <button type="button" id="cancelButton2" class="btn btn-secondary btn-sm"
                            style="display:none;">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="userZip-container">
            <p>Your Zip Codes</p>
            <div class="col-md"></div>
            <div id="displayZipCodes" class="col-md justify-content-center">
                <!-- JavaScript will populate this container -->
            </div>
        </div>
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#zipCodeModal"
            onclick="populateUserZipCodes();">
            Modify Zip Codes
        </button>
    </div>

    <div class="modal fade" id="zipCodeModal" tabindex="-1" aria-labelledby="zipCodeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="zipCodeModalLabel">Your Zip Codes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container mt-5">
                        <div class="county-group justify-content-center">
                            <form>
                                <div class="form-row justify-content-center">
                                    <div class="form-group col-md-5">
                                        <label for="zipSelect">Zip Code:</label>
                                        <input id="zipSelect" class="form-select-sm col-md-5" placeholder="Zip Code" type="text"
                                            maxlength="5"  onblur="addZipCode();">
                                        </select>
                                    </div>
                                    <div class="form-group col-md-1">
                                        <b>OR</b>
                                    </div>
                                    <div class="form-group col-md-5 justify-content-left">
                                        <label for="stateSelect" class="col-md-5">Select a State:</label>
                                        <select id="stateSelect" class="form-control-sm col-md-5"
                                            onchange="populateCitiesCounties();"></select>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="county-group justify-content-center">
                            <form>
                                <div class="form-row justify-content-center">
                                    <div class="form-group col-md-5">
                                        <label for="countySelect">County:</label>
                                        <select id="countySelect" class="form-select-sm col-md-8"
                                            onchange="populateCountyZipCodes();"></select>
                                    </div>
                                    <div class="form-group col-md-1">
                                        <b>OR</b>
                                    </div>
                                    <div class="form-group col-md-5">
                                        <label for="citySelect">Cities:</label>
                                        <select id="citySelect" class="form-select-sm col-md-8"
                                            onchange="populateCityZipCodes();"></select>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="form-row zips col-md-12">
                            <div class="zipCode-group col-md-4 justify-content-center">
                                <p>Select Zip Codes</p>
                                <div class="col-md-2 justify-content-center"></div>
                                <div id="availabeZipCodesContainer" class="col-md justify-content-center">
                                    <!-- JavaScript will populate this container -->
                                </div>
                            </div>
                            <div class="form-row align-items-center justify-content-center col-md-3">
                                <div class="zipCode-group col-md-12 justify-content-center">
                                    <div class="row ">
                                        <button type="button" class="btn btn-primary btn-sm"
                                            onclick="addSelection()">Add
                                            --> </button>
                                    </div>
                                    <div class="row">
                                        <button type="button" class="btn btn-primary btn-sm"
                                            onclick="removeSelection()">
                                            <-- Remove</button>
                                    </div>
                                </div>
                            </div>
                            <div class="zipCode-group col-md-4 justify-content-center">
                                <p>Your Zip Codes</p>
                                <div class="col-md-4"></div>
                                <div id="selectedZipCodesContainer" class="col-md justify-content-center">
                                    <!-- JavaScript will populate this container -->
                                </div>
                            </div>
                        </div>
                        <div form-row justify-content-center>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal"
                                    onclick="saveChanges()">Save</button>
                                <button type="button" class="btn btn-primary btn-sm"
                                    data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/profile_b.js"></script>
</body>


</html>