<div id="propertyModal" class="modal fade" tabindex="-1" aria-labelledby="propertyModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="propertyModalLabel">Property Info</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="col-md-12">
            <div class="form-container">
              <form id="propertyForm" style="padding-top: 5px;">
                <div class="buyertype-container-edit">
                  <u>Buyer Type</u>
                  <div class="form-row">
                    <div id="buyerTypeCheckbox" class="col-md-12">
                      <!-- JavaScript will populate this container -->
                    </div>
                  </div>
                </div>
                <input type="hidden" id="userid" name="userid" value="<%= buyer.userid %>">
                <!-- Buttons inside the form -->
                <div class="form-row">
                  <div class="col-md-12 text-right">
                    <button type="button" id="modify-button" class="btn btn-primary" data-dismiss="modal" onclick="savePropertyChanges(event)">Save</button>
                    <button type="button" id="modify-button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  </div>
                </div>
              </form>
            </div> <!-- Close form-container div here -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>