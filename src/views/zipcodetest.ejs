<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Buyer Profile</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="zipcodetest.css">
</head>

<body>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Open Form
    </button>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Your Zip Codes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container mt-5">
                        <div class="selectContainer">
                            <div class="state-group row">
                                <label for="stateSelect" class="col-md-4 col-form-label">States:</label>
                                <div class="col-md-2">
                                    <select id="stateSelect" class="form-select-sm justify-content-left"
                                        onchange="populateCitiesCounties();"></select>
                                </div>
                            </div>
                            <div class="countycity-group row">
                                <div class="col-md-2 d-flex align-items-center justify-content-center">
                                    <p>OR</p>
                                </div>
                                <div class="col-md-10">
                                    <div class="county-group row">
                                        <label for="countySelect" class="col-md-2 col-form-label">County:</label>
                                        <div class="col-md-3">
                                            <select id="countySelect" class="form-select-sm"
                                                onchange="populateCountyZipCodes();"></select>
                                        </div>
                                    </div>
                                    <div class="city-group row">
                                        <label for="citySelect" class="col-md-2 col-form-label">Cities:</label>
                                        <div class="col-md-3">
                                            <select id="citySelect" class="form-select-sm" onchange="populateCityZipCodes();"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="zipCode-container col-md-4 justify-content-center">
                                <p>Select Zip Codes</p>
                                <div class="col-md-2 justify-content-center"></div>
                                <div id="availabeZipCodesContainer" class="col-md justify-content-center">
                                    <!-- JavaScript will populate this container -->
                                </div>
                            </div>
                            <div class="zipCode-container col-md-4 justify-content-center">
                                <div class="row"></div>
                                <div class="row"></div>
                                <div class="row justify-content-center">
                                    <button type="button" class="btn btn-primary btn-sm" onclick="addSelection()">Add --> </button>
                                </div>
                                <div class="row justify-content-center">
                                    <button type="button" class="btn btn-primary btn-sm" onclick="removeSelection()"> <--
                                            Remove</button>
                                </div>
                            </div>
                            <div class="zipCode-container col-md-4 justify-content-center">
                                <p>Your Zip Codes</p>
                                <div class="col-md-2"></div>
                                <div id="selectedZipCodesContainer" class="col-md justify-content-center">
                                    <!-- JavaScript will populate this container -->
                                </div>
                            </div>
                        </div>
                                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-sm" onclick="saveChanges()">Save</button>
                    <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
                    </div>
    </div>
            </div>
        </div>
    </div>

    <script src="/zipcodetest.js"></script>
</body>
