<body id="registerBody">
  <div class="container mt-5 col-md-4">
    <div class="form-container">
      <h3 class="text-center">User Registration</h3>
      <form id="registerContainer" class="col-md-12" action="/register" method="post">
        <div class="form-row justify-content-center">
          <label for="userType" class="col-md-4 col-form-label">User Type</label>
          <div class="col-md-7">
            <div class="radio-group">
              <label class="radio-label"><input type="radio" name="userType" value="Buyer" required>
                Buyer</label>
              <label class="radio-label"><input type="radio" name="userType" value="Agent" required>
                Agent</label>
            </div>
          </div>
        </div>
        <!-- <div class="form-row ">
          <div class="col-md-4"></div>
          <label class="col-md-4 label-above" style="font-size: 14px;">First</label>
          <label class="col-md-3 label-above" style="font-size: 14px;">Last</label>
        </div> -->
        <div class="form-row ">
          <label for="firstName" class="col-md-5 col-form-label">Name</label>
          <input type="text" class="form-control-sm col-md-3" placeholder="First Name" id="firstName" name="firstName" required disabled>
          <input type="text" class="form-control-sm col-md-4" placeholder="Last Name" id="lastName" name="lastName" required disabled>
        </div>
        <div class="form-row ">
          <label for="address" class="col-md-5 col-form-label">Address</label>
          <input type="text" class="form-control-sm col-md-7" id="address" name="address" placeholder="Address" disabled>
        </div>
        <div class="form-row displaytext">
          <label for="city" class="col-md-5 view-mode-r">City, State</label>
          <div class="col-md-4 view-mode-l" id="cityState"></div>
        </div>

        <div class="form-row ">
          <label for="zipCode" class="col-md-5 col-form-label">Zip Code</label>
          <input type="text" class="form-control-sm col-md-2" id="zipCode" name="zipCode" placeholder="Zip Code" maxlength="5" onmouseleave="lookupCityState()" onblur="lookupCityState()" disabled>
        </div>


        <div class="form-row ">
          <label for="phoneNumber" class="col-md-5 col-form-label">Phone Number</label>
          <input type="text" class="form-control-sm col-md-4" id="phoneNumber" name="phoneNumber" placeholder="Phone Number" disabled>
        </div>
        <div class="form-row ">
          <label for="email" class="col-md-5 col-form-label">Email</label>
          <input type="email" class="form-control-sm col-md-6" id="email" name="email" placeholder="Email" disabled onblur="checkEmail()">
          <span id="userStatus"></span>
        </div>
        <div class="form-row ">
          <label for="password" class="col-md-5 col-form-label">Password</label>
          <input type="password" class="form-control-sm col-md-5" id="password" name="password" placeholder="Password" disabled>
        </div>
        <div class="form-row ">
          <label for="confirm_password" class="col-md-5 col-form-label">Confirm Password</label>
          <input type="password" class="form-control-sm col-md-5" id="confirm_password" name="confirm_password" placeholder="Confirmation Password" required disabled>
          <p id="error_message" style="display: none; color: red"></p>
        </div>
        <div class="col-md-2"></div>
        <div class="text-center">
          <button id="submit_button" type="submit" disabled>Register</button>
        </div>
      </form>
    </div>
  </div>
  </div>
  <!-- <script src="/script.js"></script> -->
  <script src="/verifypass.js"></script>
  <script src="/register.js"></script>
</body>

