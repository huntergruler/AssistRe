<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="/styles.css"> <!-- Link to your external CSS file -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Ensure you have some CSS for basic styling -->
    <link rel="stylesheet" href="header.css">
</head>
<header>
    <h1 id="title"><a href="/">SeekingAgents</a></h1>
    <div id="navlinks">
        <a href="/dashboard">Dashboard</a>
        <p>|</p>
        <a href="/settings">Settings</a>
        <p>|</p>
        <a href="/logout">Logout</a>
    </div>
</header>
<body>
    <div id="parentElement">
    <div id="profileContainer">
        <h1>Profile Page</h1>
    <form id="licenseForm">
        <input type="text" id="licensenumber" name="licensenumber" placeholder="License Number" required>
        <input type="text" id="licensestate" name="licensestate" placeholder="License State" pattern="[A-Z]{2}" title="Enter a valid US state abbreviation" required>
        <button type="button" onclick="addLicense()">Add</button>
    </form>
    <table id="licensesTable">
        <thead>
            <tr>
                <th>License Number</th>
                <th>License State</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (hasLicenses) { %>
              <% licenses.forEach(function(license) { %>
                <tr id="license-<%= license.agentlicenseid %>">
                    <td><%= license.licensenumber %></td>
                    <td><%= license.licensestate %></td>
                    <td>
                        <button type="button" onclick="deleteLicense(<%= license.agentlicenseid %>)">Delete</button>
                    </td>
                </tr>
            <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3">No licenses found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <!-- Popup Dialog HTML -->
<div id="licenseDialog" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <form id="licenseForm">
            <label for="licenseNumber">License Number:</label>
            <input type="text" id="licenseNumber" name="licenseNumber" required>
            <label for="licenseState">License State:</label>
            <input type="text" id="licenseState" name="licenseState" required pattern="[A-Z]{2}" title="Enter a valid US state abbreviation">
            <button type="button" onclick="addLicense()">Add License</button>
        </form>
    </div>
</div>
</div>
</div>
</div>
<script src="/script.js"></script>
</body>
</html>
