<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buyer Dashboard</title>
  <link rel="stylesheet" href="header.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="dashboard_b.css">
</head>
<header>
  <div class="row row-cols-2">
    <div id="title" class="align-items-center">
      <div class="logo-container"></div>
    </div>
    <nav id="navlinks" class="justify-content-end text-center">
      <p id="navname">
        <%= buyer.firstName %>
        <%= buyer.lastName %>
      </p>
      <p>|</p>
      <p><a href="/profile_b">Profile</a></p>
      <p>|</p>
      <p><a href="/settings_b">Settings</a></p>
      <p>|</p>
      <p><a href="/logout">Logout</a></p>
    </nav>
  </div>

</header>

<body id="dashboardBody">
  <div class="margin-top-100"></div>
  <div id="dashboardContainer" style="text-align: center;">
    <h2>Buyer Dashboard for <%= buyer.firstName %>
      <%= buyer.lastName %>
    </h2>
    <div class="form-row col-md-12 d-flex justify-content-left">
      <div class="form-group col-md">
        <div class="property-group" style="margin-top: 50px;">
          <div class="partial-info" id="propertyContainer">
            <h4 class="text-center">Your Search Criteria</h4>
          </div>
          <div class="more-info" id="more-info1" style="display: none;">
            <div class="searchInfoDisplay" id="searchInfoDisplay">
              <!-- JavaScript will populate this container -->
            </div>
            <div class="form-row justify-content-center">
              <button id="modify-button" class="modify-button" type="button" data-toggle="modal" data-target="#propertyModal">
                Modify Property Info
              </button>
            </div>
          </div>
          <button id="toggle1" class="toggle-button moreless-button">
            <i class="fas fa-chevron-down"></i>&nbsp;Show&nbsp;<i class="fas fa-chevron-down"></i>
          </button>
        </div>
        <div class="form-row">
          <div class="userZip-container">
            <div class="partial-info" id="zipContainer">
              <h4>Your Zip Codes</h4>
            </div>
            <div class="more-info" id="more-info2" style="display: none;">
              <div id="displayZipCodes" class="justify-content-center">
                <!-- JavaScript will populate this container -->
              </div>
              <div class="form-row justify-content-center">
                <button type="button" id="modify-button" class="modify-button" data-toggle="modal" data-target="#zipCodeModal" onclick="populateUserZipCodes();">
                  Modify Zip Codes
                </button>
              </div>
            </div>
            <button id="toggle2" class="toggle-button moreless-button">
              <i class="fas fa-chevron-down"></i>&nbsp;Show&nbsp;<i class="fas fa-chevron-down"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="offer-group col-md-8">
        <!-- <div class="form-row" style="margin-top: 40px;">
          <h3 class="col-md-6">Your Offers</h3>
        </div> -->
        <div class="offerFilter row col-md-12" id="filtercontainer">
          <label for="offerFilter" class="col-md-5 col-form-label"><span>
              <h4>Your Offers</h4>
            </span></label>
          <select id="offerFilter" class="form-select-sm col-md-5" onchange="getOffers(this.value, this)">
            <option id="allavailablefilter" value="AllAvailable">All Available Offers</option>
            <option id="newfilter" value="New">Unread Offers</option>
            <option id="favoritefilter" value="Favorite">Favorite Offers</option>
            <option id="readfilter" value="Read">Read Offers</option>
            <option id="declinedfilter" value="Declined">Declined</option>
          </select>
        </div>

        <div id="getOffers" class="tabcontent col-md-12">
          <div class="row offerlist">
            <div id="offers" class="offers col-md-4">
              <!-- JavaScript will populate this container -->
            </div>
            <div id="offerDetailContainer" class="container-right col-md-4">
              <div id="offerDetail">
                <!-- JavaScript will populate this container -->
              </div>
              <div class="form-row container-right" style="border:none">
                <div id="detailButtons">
                  <!-- JavaScript will populate this container -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container-right col-md-4" id="offerDetails">
        <div id="offerFormContainer">
          <form id="offerForm" style="padding-top: 5px;">
            <input type="hidden" id="agentid" name="agentid">
            <input type="hidden" id="buyeragentmatchid" name="buyeragentmatchid">
            <input type="hidden" id="datatype" name="datatype">
            <div class="form-row container-right">
              <label for="offerType" class="col-md-5 col-form-label">Offer Type</label>
              <select id="offerType" class="form-select-sm col-md-6" required></select>
            </div>
            <div class="form-row container-right">
              <label for="levelOfService" class="col-md-5 col-form-label">Level of Service</label>
              <select id="levelOfService" class="form-select-sm col-md-6" required></select>
            </div>
            <div class="form-row container-right">
              <label for="compensationType" class="col-md-5 col-form-label">Type of Comp</label>
              <select id="compensationType" class="form-select-sm col-md-6" required></select>
            </div>
            <div class="form-row container-right">
              <label for="compensationAmount" class="col-md-5 col-form-label">Comp Amount</label>
              <input type="text" class="form-control-sm col-md-5" placeholder="Comp Amount ($ or %)" id="compensationAmount" name="compensationAmount" required>
            </div>
            <div class="form-row container-right">
              <label for="retainerFee" class="col-md-5 col-form-label">Retainer Fee Amount</label>
              <input type="text" class="form-control-sm col-md-5" placeholder="Retainer Fee" id="retainerFee" name="retainerFee" required>
            </div>
            <div class="form-row container-right">
              <label for="retainerFee" class="col-md-5 col-form-label">Retainer Fee Credited</label>
              <div class="col-md-3">
                <input type="radio" id="retainerCreditedY" name="retainerCredited" value="1" required>
                Yes
                <input type="radio" id="retainerCreditedN" name="retainerCredited" value="0" required>
                No
              </div>
              <div class="col-md-3">
              </div>
            </div>
            <div class="form-row container-right">
              <label for="lengthOfService" class="col-md-4 col-form-label">Length of Contract</label>
              <input type="text" class="form-control-sm col-md-6" placeholder="Length of Service" id="lengthOfService" name="lengthOfService" required>
            </div>
            <div class="form-row container-right">
              <label for="expirationCompTimeFrame" class="col-md-4 col-form-label">Comp after Expired
                Time Frame</label>
              <input type="text" class="form-control-sm col-md-6" placeholder="Expiration Comp Time Frame" id="expirationCompTimeFrame" name="expirationCompTimeFrame" required>
              <div class="help-icon" onclick="showHelp()">?</div>
              <div id="help-dialog" class="hidden">
                <p>This is some helpful information.</p>
                <button onclick="hideHelp()">Close</button>
              </div>
            </div>
            <div class="form-row container-right">
              <label for="expirationCompensation" class="col-md-4 col-form-label">Comp Amount AFTER
                Expiration</label>
              <input type="text" class="form-control-sm col-md-6" placeholder="Expiration Compensation" id="expirationCompensation" name="expirationCompensation" required>
            </div>
            <div class="form-row container-right">
              <label for="offerDesc" class="col-md-4 col-form-label">Offer Description</label>
              <textarea id="offerDesc" rows="4" cols="50" maxlength="500" placeholder="Enter a verbal Description of the services you will provide (limit 500 characters)" oninput="updateCountdown()"></textarea>
              <div id="countdown"></div>
            </div>
            <div class="form-row container-right">
              <div class="col-md-8">
                <div id="offerButton">
                  <!-- JavaScript will populate this container -->
                </div>
              </div>
              <div class="col-md-4">
                <button type="button" class="col-md-5" style="border: 1px solid black; border-radius: 5px; padding: 2px;   margin: 2px;"="clearOffer" onclick="cancel()">Cancel</button>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

  <div id="messageModal" class="modal" style="display: none;">
    <div class="modal-content">
      <span class="close">&times;</span>
      <p id="modalMessage">Some text in the Modal..</p>
      <button class="modal-close-btn" id="modalCloseButton">Close</button>
    </div>
  </div>
  <div id="propertyModal" class="modal fade" tabindex="-1" aria-labelledby="propertyModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="propertyModalLabel">Property Info</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container">
            <div class="form-container">
              <form id="propertyForm" style="padding-top: 5px;">
                <div class="buyertype-container-edit">
                  <u>Buyer Type</u>
                  <div class="form-row ">
                    <div id="buyerTypeCheckbox" class="col-md-12">
                      <!-- JavaScript will populate this container -->
                    </div>
                  </div>
                </div>
                <div class="form-row ">
                  <label for="propertyType" class="col-md-4 col-form-label">Property Type</label>
                  <input type="text" class="form-control-sm col-md-6" placeholder="Property Type" id="propertyType" name="propertyType" value="<%= buyer.propertyType %>" required>
                </div>
                <div class="form-row ">
                  <label for="bedrooms_min" class="col-md-4 col-form-label">Minimum Bedrooms</label>
                  <input type="text" class="form-control-sm col-md-2" id="bedrooms_min" name="bedrooms_min" value="<%= buyer.bedrooms_min %>" required>
                </div>
                <div class="form-row">
                  <label for="bathrooms_min" class="col-md-4 col-form-label">Minimum Bathrooms</label>
                  <input type="text" class="form-control-sm col-md-2" id="bathrooms_min" name="bathrooms_min" value="<%= buyer.bathrooms_min %>" required>
                </div>
                <div class="form-row ">
                  <label for="squareFootage_min" class="col-md-4 col-form-label">Square Foot Range</label>
                  <input type="text" class="form-control-sm col-md-2" placeholder="Min" id="squareFootage_min" name="squareFootage_min" value="<%= buyer.squareFootage_min %>" required>
                  <span class="col-md-1 text-center">To</span>
                  <input type="text" class="form-control-sm col-md-2" placeholder="Max" id="squareFootage_max" name="squareFootage_max" value="<%= buyer.squareFootage_max %>" required>
                </div>
                <div class="form-row ">
                  <label for="price_min" class="col-md-4 col-form-label">Price Range ($)</label>
                  <input type="text" class="form-control-sm col-md-2" placeholder="Min" id="price_min" name="price_min" value="<%= buyer.price_min %>" required>
                  <span class="col-md-1 text-center">To</span>
                  <input type="text" class="form-control-sm col-md-2" placeholder="Max" id="price_max" name="price_max" value="<%= buyer.price_max %>" required>
                </div>
                <div class="form-row" style="align-items: center;">
                  <label for="buyerLevelOfService" class="col-md-4 col-form-label">Agent Service
                    Level</label>
                  <select id="buyerLevelOfService" class="form-select-sm col-md-6" placeholder="Level Of Service"></select>
                  <input type="hidden" id="levelofserviceid" name="levelofserviceid" value="<%= buyer.levelofserviceid %>">
                </div>
                <div class="form-row" style="align-items: center;">
                  <label for="timeFrame" class="col-md-4 col-form-label">Buying Time Frame</label>
                  <input type="text" class="form-control-sm col-md-2" placeholder="Enter Time Frame" id="timeFrame" name="timeFrame" value="<%= buyer.timeFrame %>" required>
                  <select id="timeframeUnit" class="col-md-2" style="margin-left: 3px;" placeholder="Time Unit">
                    <option value="Days" <%= buyer.timeframeUnit === 'Days' ? 'selected' : '' %>>Days</option>
                    <option value="Weeks" <%= buyer.timeframeUnit === 'Weeks' ? 'selected' : '' %>>Weeks</option>
                    <option value="Months" <%= buyer.timeframeUnit === 'Months' ? 'selected' : '' %>>Months</option>
                  </select>
                </div>
                <div class="form-row ">
                  <label for="prequalifiedY" id="prequalified" class="col-md-4 col-form-label">Prequalified</label>
                  <div class="col-md-3">
                    <% if ( buyer.prequalified=='Yes' ) { %>
                    <input type="radio" id="prequalifiedY" value="Yes" name="prequalified" required checked>
                    Yes
                    <input type="radio" id="prequalifiedN" value="No" name="prequalified" required>
                    No
                    <% } else { %>
                    <input type="radio" id="prequalifiedY" value="Yes" name="prequalified" required>
                    Yes
                    <input type="radio" id="prequalifiedN" value="No" name="prequalified" required checked>
                    No
                    <% } %>
                  </div>
                  <div class="col-md-3"></div>
                </div>
                <div class="form-row ">
                  <label for="prequalifiedAmount" class="col-md-4 col-form-label">Prequalified
                    Amount</label>
                  <input type="text" class="form-control-sm col-md-5" placeholder="Enter Prequalified Amount" id="prequalifiedAmount" name="prequalifiedAmount" value="<%= buyer.prequalifiedAmount%>">
                </div>
                <div class="form-row ">
                  <label for="preferredLanguages" class="col-md-4 col-form-label">Preferred
                    Language</label>
                  <input type="text" class="form-control-sm col-md-6 " placeholder="Preferred Language" id="preferredLanguages" name="preferredLanguages" value="<%= buyer.preferredLanguages %>" required>
                </div>
                <input type="hidden" id="userid" name="userid" value="<%= buyer.userid %>">
              </form>
            </div>
            <div form-row justify-content-center>
              <div class="modal-footer">
                <button type="button" id="modify-button" class="modify-button" data-dismiss="modal" onclick="savePropertyChanges(event)">Save</button>
                <button type="button" id="modify-button" class="modify-button" data-dismiss="modal">Cancel</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="zipCodeModal" class="modal fade" tabindex="-1" aria-labelledby="zipCodeModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="zipCodeModalLabel">Your Zip Codes</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="zipCodeContainer">
            <div class="zipstate-group justify-content-center">
              <form>
                <div class="form-row">
                  <div class="form-row col-md-12 justify-content-center">
                    <div><b>Enter a Zip Code or Select a State</b></div>
                  </div>
                  <div class="form-row col-md-12 justify-content-center">
                    <div class="form-group col-md-4">
                      <label for="zipSelect">Zip Code:</label>
                      <input id="zipSelect" class="form-select-sm col-md-5" placeholder="Zip Code" type="text" maxlength="5" onblur="addZipCode();">
                    </div>
                    <div class="form-group col-md-1">
                      <b>OR</b>
                    </div>
                    <div class="form-group col-md-7">
                      <label for="stateSelect" class="col-md-4">State:</label>
                      <select id="stateSelect" class="form-select-sm col-md-7" onchange="populateCitiesCounties();"></select>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <div class="county-group justify-content-center">
              <form>
                <div class="form-row justify-content-center">
                  <div id="countymessage" style="display: none;">Select a City or County to display
                    Zip Codes</div>
                </div>
                <div class="form-row justify-content-center">
                  <div class="form-group col-md-5">
                    <label for="countySelect">County:</label>
                    <select id="countySelect" class="form-select-sm col-md-8" onchange="populateCountyZipCodes();"></select>
                  </div>
                  <div class="form-group col-md-1">
                    <b>OR</b>
                  </div>
                  <div class="form-group col-md-5">
                    <label for="citySelect">Cities:</label>
                    <select id="citySelect" class="form-select-sm col-md-8" onchange="populateCityZipCodes();"></select>
                  </div>
                </div>
              </form>
            </div>
            <div class="zipselect-group col-md-12">
              <form>
                <div class="form-row justify-content-center">
                  <div class="zipCode-group col-md-4 justify-content-center">
                    <p>Select Zip Codes</p>
                    <div class="col-md-2 justify-content-center"></div>
                    <div id="availabeZipCodesContainer" class="col-md justify-content-center">
                      <!-- JavaScript will populate this container -->
                    </div>
                  </div>
                  <div class="zipCode-group col-md-2 zipAction">
                    <div class="col-md">
                      <div class="row">
                        <button id="addZip" class="toggle-button zipmove-button" onclick="addSelection(event)">
                          &nbsp;Add&nbsp;<i class="fas fa-chevron-right"></i>&nbsp;
                        </button>
                      </div>
                      <div class="row">
                        <button id="removeZip" class="toggle-button zipmove-button" onclick="removeSelection(event)">
                          &nbsp;<i class="fas fa-chevron-left"></i>&nbsp;Remove&nbsp;
                        </button>
                      </div>
                    </div>
                  </div>
                  <div class="zipCode-group col-md-3 justify-content-center">
                    <p>Your Zip Codes</p>
                    <div class="col-md-4"></div>
                    <div id="selectedZipCodesContainer" class="col-md justify-content-center">
                      <!-- JavaScript will populate this container -->
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <div class="form-row justify-content-center">
              <div class="modal-footer">
                <button type="button" id="modify-button" class="modify-button" onclick="saveZipChanges()">Save</button>
                <button type="button" id="modify-button" class="modify-button" onclick="populateDisplayZipCodes()" data-dismiss="modal">Cancel</button>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/dashboard_b.js"></script>
  <script src="/session.js"></script>
</body>

</html>